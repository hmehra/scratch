FLAGS := -ggdb -std=c++11
all:
	mkdir -p bin
	g++ $(FLAGS) -o bin/cbuffer                   cbuffer.cpp
	g++ $(FLAGS) -o bin/2numbers                  2numbers.cpp
	g++ $(FLAGS) -o bin/numReverse                numReverse.cpp
	g++ $(FLAGS) -o bin/atoi                      atoi.cpp
	g++ $(FLAGS) -o bin/divison                   division.cpp
	g++ $(FLAGS) -o bin/anagram                   anagram.cpp
	g++ $(FLAGS) -o bin/binadd                    binadd.cpp
	g++ $(FLAGS) -o bin/dupremove                 dupremove.cpp
	g++ $(FLAGS) -o bin/linkadd                   linkadd.cpp
	g++ $(FLAGS) -o bin/longsubpalindrome         longsubpalindrome.cpp
	g++ $(FLAGS) -o bin/longsubstr                longsubstr.cpp
	g++ $(FLAGS) -o bin/anagram                   anagram.cpp
	g++ $(FLAGS) -o bin/numpalindrome             numpalindrome.cpp
	g++ $(FLAGS) -o bin/reverselist               reverselist.cpp
	g++ $(FLAGS) -o bin/listpalindrome            listpalindrome.cpp
	g++ $(FLAGS) -o bin/validbrackets             validbrackets.cpp
	g++ $(FLAGS) -o bin/longpalindrome            longpalindrome.cpp
	g++ $(FLAGS) -o bin/removedup                 removedup.cpp
	g++ $(FLAGS) -o bin/longcomprefix             longcomprefix.cpp
	g++ $(FLAGS) -o bin/3sum                      3sum.cpp
	g++ $(FLAGS) -o bin/nextpermutation           nextpermutation.cpp
clean:
	rm -rf bin
	rm -rf *.out
